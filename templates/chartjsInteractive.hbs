<div class="chart__inner component__inner">
  {{> component this}}
  <canvas id="myChart{{_id}}" class="chart__widget component__widget" width="800" height="400" style="max-width:800px; max-height:400px;"></canvas>
  <div id="axisSelections" style="display: block;">
    <div id="xAxisSelector" class="axis-selector">
      <label for="xAxis">X-Axis:</label>
      <select id="xAxis">
        <!-- Options will be dynamically added based on selected chart type -->
      </select>
    </div>
    <div id="yAxisSelector" class="axis-selector">
      <label for="yAxis">Y-Axis:</label>
      <select id="yAxis">
        <!-- Options will be dynamically added based on selected chart type -->
      </select>
    </div>
    <div id="pointColorSelector" class="axis-selector">
      <label for="pointColor">Point/Bar colour:</label>
      <select id="pointColor">
        <!-- Options will be dynamically added based on selected chart type -->
      </select>
    </div>
    <div id="binCountSelector" class="bin-selector">
       <label for="binCount">Bin Count:</label>
       <input type="number" id="binCount" min="1" max="10" value="5">
    </div>
  </div>
  <div id="chartType" class="chart-type-selector">
    {{#each availableChartTypes}}
      <button class="chart-button {{this.type}}-chart" data-chart-type="{{this.type}}">
        <span class="icon"><img src="assets/{{this.type}}-chart-icon.png"/></span>
        <span class="title">{{this.type}}</span>
      </button>
    {{/each}}
  </div>
</div>